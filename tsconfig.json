{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "jsx": "react",
    "jsxFactory": "h",
    "removeComments": false,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "lib": ["esnext"]
  },

  "exclude": [
    "node_modules",
    "dist",
    ".vscode",
    "build",
    "scripts",
    "jest",
    "coverage",
    "local"
  ]
}
