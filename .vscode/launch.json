  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "vscode-jest-tests",
      "request": "launch",
      "args": [
        "--inspect-brk",
        "${workspaceFolder}/node_modules/jest/bin/jest",
        "--runInBand"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "name": "Test @plastic/core",
      "request": "launch",
      "args": [
        "--inspect-brk",
        "${workspaceFolder}/node_modules/jest/bin/jest",
        "--runInBand"
      ],
      "cwd": "${workspaceFolder}/packages/core",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
