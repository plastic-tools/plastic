{
  "name": "plastic",
  "version": "1.0.0",
  "description": "Playground",
  "repository": "https://github.com/charlesjolley/plastic",
  "author": "Charles Jolley <charles@okito.net>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "jest",
    "clean": "wsrun clean --exclude-missing",
    "dev": "wsrun dev.app --recursive --exclude-missing",
    "dev.default": "wsrun dev.app @plastic/docs --recursive --exclude-missing",
    "build": "wsrun build --recursive --stages --exclude-missing",
    "build.dev": "wsrun build --recursive --stages --exclude-missing --dev"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "jest": "^23.5.0",
    "ts-jest": "^23.10.2",
    "ts-transform-css-modules": "^0.2.2",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "ttypescript": "^1.5.5",
    "typescript": "^3.0.3",
    "wsrun": "^2.2.1"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*",
      "<rootDir>/apps/*"
    ]
  }
}
