{
  "name": "plastic",
  "version": "1.0.0",
  "description": "Playground",
  "repository": "https://github.com/charlesjolley/plastic",
  "author": "Charles Jolley <charles@okito.net>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "test": "yarn test.jest",
    "test.jest": "jest",
    "clean": "wsrun clean --exclude-missing",
    "start": "wsrun start.app --recursive --exclude-missing",
    "build": "wsrun build --recursive --stages --exclude-missing",
    "build.dev": "wsrun build --recursive --stages --exclude-missing --dev"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "apps/*"
    ]
  },
  "devDependencies": {
    "jest": "^23.5.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.3",
    "wsrun": "^2.2.1"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*",
      "<rootDir>/apps/*"
    ]
  }
}
