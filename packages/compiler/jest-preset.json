{
  "transform": { "^.+\\.tsx?$": "ts-jest" },
  "testMatch": [
    "**/__tests__/**/*.js?(x)",
    "**/?(*.)+(spec|test).js?(x)",
    "**/__tests__/**/*.ts?(x)",
    "**/?(*.)+(spec|test).ts?(x)"
  ],
  "moduleFileExtensions": ["js", "json", "jsx", "node", "ts", "tsx"],
  "globals": {
    "ts-jest": {
      "compiler": "@plastic/compiler"
    }
  }
}
