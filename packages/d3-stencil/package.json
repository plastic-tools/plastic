{
  "name": "@plastic/d3-stencil",
  "private": false,
  "version": "1.0.0",
  "description": "Components of Graphs build with StencilJS & D3.js",
  "keywords": [
    "Stencil",
    "D3.js",
    "Web Components",
    "Graphs"
  ],
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "module": "dist/esm/index.js",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "stencil build --prerender",
    "dev": "stencil build --dev --watch --serve",
    "dev.app": "stencil build --dev --watch",
    "serve": "yarn dev",
    "start": "yarn dev",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache",
    "tslint-check": "tslint-config-prettier-check ./tslint.json"
  },
  "dependencies": {
    "d3": "^5.5.0"
  },
  "devDependencies": {
    "@stencil/core": "^0.12.4",
    "@stencil/router": "^0.2.5",
    "@stencil/sass": "^0.1.0",
    "@stencil/utils": "latest",
    "@types/jest": "^23.3.1",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^23.4.2",
    "prettier": "^1.14.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/edgarordonez/d3-stencil.git"
  },
  "author": "Edgar Ordóñez Rodríguez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/edgarordonez/d3-stencil"
  },
  "homepage": "https://github.com/edgarordonez/d3-stencil",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$": "@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
