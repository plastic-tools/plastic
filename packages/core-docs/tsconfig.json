{
  "compilerOptions": {
    "lib": ["dom", "es2017"],
    "outDir": "dist",
    "module": "commonjs",
    "plugins": [
      {
        "transform": "ts-transform-css-modules/dist/transform",
        "type": "config"
      },
      {
        "transform": "ts-transformer-keys/transformer"
      }
    ]
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
